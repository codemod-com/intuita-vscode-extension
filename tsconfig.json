{
	"compilerOptions": {
        "experimentalDecorators": true,
		"module": "commonjs",
		"target": "ES2020",
		"lib": [
          "ES2020",
          "dom"
        ],
		"sourceMap": false,
		"rootDir": "src",
		"strict": true,
		"noUncheckedIndexedAccess": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"noUnusedParameters": true,
		"noUnusedLocals": true
	}
}
