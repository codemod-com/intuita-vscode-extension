{
	"compilerOptions": {
		"experimentalDecorators": true,
		"module": "commonjs",
		"target": "ES2020",
		"lib": ["ES2020"],
		"sourceMap": false,
		"strict": true,
		"noUncheckedIndexedAccess": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"noUnusedParameters": true,
		"noUnusedLocals": true,
		"esModuleInterop": true
	},
	"include": ["./src/**/*.ts", "./src/types/**/*.d.ts", "./test/**/*.ts", "packageJsonAnalyzer/CodemodList.ts"]
}
