{
	"name": "intuita-vscode-extension",
	"displayName": "Intuita",
	"description": " Discover, run & manage codemods faster & easier.",
	"version": "0.17.0",
	"publisher": "Intuita",
	"icon": "img/intuita_square128.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/intuita-inc/intuita-vscode-extension"
	},
	"engines": {
		"vscode": "^1.74.0"
	},
	"categories": [
		"Programming Languages",
		"Formatters",
		"Linters"
	],
	"keywords": [
		"codemod",
		"prettier",
		"intellicode",
		"intellisense",
		"tabnine",
		"copilot",
		"refactor",
		"dependency"
	],
	"activationEvents": [
		"onUri",
		"workspaceContains:**/*.ts*",
		"workspaceContains:**/*.js*"
	],
	"capabilities": {
		"codeActionProvider": "true"
	},
	"contributes": {
		"viewsWelcome": [
			{
				"view": "intuitaViewId",
				"contents": "No change to review! Run some codemods via VS Code Command & check back later!\n To run a codemod you can right-click on a folder and select \"Intuita: Execute Codemod On Path\" and select a codemod you want to execute."
			}
		],
		"commands": [
			{
				"command": "intuita.createPR",
				"title": "Intuita: Create a Pull Request"
			},
			{
				"command": "intuita.clearOutputFiles",
				"title": "Intuita: clear output files"
			},
			{
				"command": "intuita.requestFeature",
				"title": "Feature Request",
				"icon": "$(flame)"
			},
			{
				"command": "intuita.openYouTubeChannel",
				"title": "YouTube Channel",
				"icon": "$(device-camera-video)"
			},
			{
				"command": "intuita.clearState",
				"title": "Clear All",
				"icon": "$(clear-all)"
			},
			{
				"command": "intuita.acceptJob",
				"title": "✓ Apply"
			},
			{
				"command": "intuita.acceptCase",
				"title": "✓ Apply"
			},
			{
				"command": "intuita.acceptFolder",
				"title": "✓ Apply"
			},
			{
				"command": "intuita.rejectJob",
				"title": "✗ Dismiss"
			},
			{
				"command": "intuita.rejectCase",
				"title": "✗ Dismiss"
			},
			{
				"command": "intuita.rejectFolder",
				"title": "✗ Dismiss"
			},
			{
				"command": "intuita.executeAsCodemod",
				"title": "Intuita: Run as a codemod"
			},
			{
				"command": "intuita.executeCodemodWithinPath",
				"title": "Intuita: Execute Codemod On Path"
			},
			{
				"command": "intuita.executeImportedModOnPath",
				"title": "Intuita: Execute Imported Mod On Path"
			},
			{
				"command": "intuita.sendAsBeforeSnippet",
				"title": "Intuita: Send as Before Snippet to the Codemod Studio"
			},
			{
				"command": "intuita.sendAsAfterSnippet",
				"title": "Intuita: Send as After Snippet to the Codemod Studio"
			},
			{
				"command": "intuita.createIssue",
				"title": "Issue",
				"icon": "$(issues)"
			},
			{
				"command": "intuita.createPR",
				"title": "Pull Request",
				"icon": "$(git-pull-request)"
			}
		],
		"configuration": {
			"title": "Intuita VSCode Extension Configuration",
			"properties": {
				"intuita.saveDocumentOnJobAccept": {
					"order": 0,
					"type": "boolean",
					"default": true,
					"description": "When a proposed change is accepted, save the associated file."
				},
				"intuita.fileLimit": {
					"order": 1,
					"type": "number",
					"default": 2000,
					"description": "The maximum number of files to execute any codemod over"
				},
				"intuita.telemetryEnabled": {
					"order": 2,
					"type": "boolean",
					"default": "true",
					"description": "Send [telemetry data](https://intuita.quip.com/ntdTAusXcdUJ/Telemetry-Compliance) to Intuita. "
				},
				"intuita.workerThreadCount": {
					"order": 3,
					"type": "number",
					"default": 4,
					"description": "The number of worker threads to execute any codemod over"
				},
				"intuita.includePatterns": {
					"order": 5,
					"type": "array",
					"default": [
						"**/*.{js,ts,jsx,tsx,cjs,mjs}"
					],
					"description": "The glob pattern to use when searching for files to execute codemods over"
				},
				"intuita.excludePatterns": {
					"order": 6,
					"type": "array",
					"default": [
						"**/node_modules"
					],
					"description": "The glob pattern to use when searching for files to exclude from codemod execution"
				}
			}
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "intuitaViewId",
					"title": "Intuita",
					"icon": "img/intuita.svg"
				}
			]
		},
		"views": {
			"intuitaViewId": [
				{
					"type": "webview",
					"id": "intuita-available-codemod-tree-view",
					"name": "Recommended Codemods (For This Workspace)",
					"contextualTitle": "Recommended Codemods (For This Workspace)"
				},
				{
					"type": "webview",
					"id": "intuitaFileExplorer",
					"name": "File Explorer",
					"contextualTitle": "File Explorer"
				},
				{
					"type": "webview",
					"id": "intuita-progress-webview",
					"name": "Intuita: Execution Progress",
					"contextualTitle": "Intuita: Execution Progress"
				}
			]
		},
		"menus": {
			"commandPalette": [
				{
					"command": "intuita.requestFeature",
					"when": "false"
				},
				{
					"command": "intuita.openYouTubeChannel",
					"when": "false"
				},
				{
					"command": "intuita.clearState",
					"when": "false"
				},
				{
					"command": "intuita.acceptJob",
					"when": "false"
				},
				{
					"command": "intuita.acceptCase",
					"when": "false"
				},
				{
					"command": "intuita.acceptFolder",
					"when": "false"
				},
				{
					"command": "intuita.rejectJob",
					"when": "false"
				},
				{
					"command": "intuita.rejectCase",
					"when": "false"
				},
				{
					"command": "intuita.rejectFolder",
					"when": "false"
				},
				{
					"command": "intuita.executeAsCodemod",
					"when": "false"
				},
				{
					"command": "intuita.executeCodemodWithinPath",
					"when": "false"
				},
				{
					"command": "intuita.executeImportedModOnPath",
					"when": "false"
				}
			],
			"editor/context": [
				{
					"command": "intuita.sendAsBeforeSnippet",
					"when": "editorHasSelection",
					"group": "9_cutcopypaste"
				},
				{
					"command": "intuita.sendAsAfterSnippet",
					"when": "editorHasSelection",
					"group": "9_cutcopypaste"
				}
			],
			"explorer/context": [
				{
					"command": "intuita.executeAsCodemod",
					"group": "2_workspace",
					"when": "resourceExtname == .js || resourceExtname == .ts"
				},
				{
					"command": "intuita.executeCodemodWithinPath",
					"group": "2_workspace",
					"when": "explorerResourceIsFolder"
				},
				{
					"command": "intuita.executeImportedModOnPath",
					"group": "2_workspace",
					"when": "explorerResourceIsFolder"
				}
				],
				"view/title": [
					{
						"command": "intuita.clearState",
						"when": "view == intuitaFileExplorer",
						"group": "navigation"
					}
			]
		}
	},
	"main": "./dist/extension.js",
	"scripts": {
		"vscode:prepublish": "yarn run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "yarn install:webview && yarn build:webview && webpack --mode production --devtool hidden-source-map",
		"lint:eslint": "eslint src --fix --ext ts",
		"lint:prettier": "prettier --write .",
		"spellcheck": "yarn cspell '**.*'",
		"install:webview": "cd intuita-webview && pnpm install",
		"build:webview": "cd intuita-webview && pnpm build",
		"watch:webview": "cd intuita-webview && pnpm start"
	},
	"devDependencies": {
		"@types/chai": "^4.3.4",
		"@types/glob": "^8.0.0",
		"@types/mocha": "^10.0.1",
		"@types/node": "18.11.18",
		"@types/semver": "^7.3.13",
		"@types/vscode": "^1.74.0",
		"@typescript-eslint/eslint-plugin": "^5.48.1",
		"@typescript-eslint/parser": "^5.48.1",
		"@vscode/test-electron": "^2.2.2",
		"chai": "^4.3.7",
		"cspell-cli": "^6.17.1",
		"eslint": "^8.31.0",
		"eslint-config-prettier": "^8.6.0",
		"eslint-plugin-prettier": "^4.2.1",
		"glob": "^8.0.3",
		"mocha": "^10.2.0",
		"prettier": "2.8.2",
		"ts-loader": "^9.4.2",
		"ts-node": "^10.9.1",
		"typescript": "^4.9.4",
		"umd-compat-loader": "^2.1.2",
		"webpack": "^5.75.0",
		"webpack-cli": "^5.0.1"
	},
	"dependencies": {
		"axios": "^1.2.2",
		"fp-ts": "^2.13.1",
		"io-ts": "^2.2.20",
		"io-ts-reporters": "^2.0.1",
		"io-ts-types": "^0.5.19",
		"monocle-ts": "^2.3.13",
		"newtype-ts": "^0.3.5",
		"semver": "^7.3.8"
	},
	"extensionDependencies": [
		"vscode.git"
	]
}
