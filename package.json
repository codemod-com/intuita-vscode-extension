{
	"name": "intuita-vscode-extension",
	"displayName": "Intuita",
	"description": "Bring Order To Your Code",
	"version": "0.3.0",
	"publisher": "Intuita",
	"icon": "img/intuitasq128.png",
	"engines": {
		"vscode": "^1.71.0"
	},
	"categories": [
		"Programming Languages",
		"Formatters",
		"Linters"
	],
	"keywords": [
		"prettier",
		"intellicode",
		"intellisense",
		"tabnine",
		"copilot",
		"refactor"
	],
	"activationEvents": [
		"workspaceContains:**/*.ts*"
	],
	"capabilities": {
		"codeActionProvider": "true"
	},
	"contributes": {
		"viewsWelcome": [
			{
				"view": "intuitaViewId",
				"contents": "No recommendations yet! Build some code & check back later!"
			},
			{
				"view": "explorerIntuitaViewId",
				"contents": "No recommendations yet! Build some code & check back later!"
			}
		],
		"commands": [
			{
				"command": "intuita.requestFeature",
				"title": "Request a feature",
				"icon": "$(flame)"
			},
			{
				"command": "intuita.acceptJob",
				"title": "✓ Accept"
			},
			{
				"command": "intuita.rejectJob",
				"title": "✗ Reject"
			}
		],
		"configuration": {
			"title": "Intuita VSCode Extension Configuration",
			"properties": {
				"intuita.saveDocumentOnJobAccept": {
					"order": 0,
					"type": "boolean",
					"default": true,
					"description": "When you accept a job, the extension will save the associated document"
				},
				"intuita.minimumLines": {
					"order": 1,
					"type": "number",
					"default": 1,
					"description": "The minimum number of lines in a file to create recommendations"
				},
				"intuita.modifierOrder": {
					"order": 2,
					"type": "array",
					"items": {
						"type": "string",
						"enum": [
							"import",
							"defaultExport",
							"export",
							"none"
						],
						"enumDescriptions": [
							"Import Modifier",
							"Default Export Modifier",
							"Export Modifier",
							"No Modifier"
						]
					},
					"default": [
						"import",
						"defaultExport",
						"export",
						"none"
					]
				},
				"intuita.kindOrder": {
					"order": 3,
					"type": "array",
					"items": {
						"type": "string",
						"enum": [
							"import",
							"enum",
							"type",
							"interface",
							"constVariable",
							"letVariable",
							"constArrowFunction",
							"letArrowFunction",
							"function",
							"class",
							"multipleVariables",
							"block",
							"export",
							"unknown"
						],
						"enumDescriptions": [
							"Import Statement",
							"Enum",
							"Type",
							"Interface",
							"Const Variable",
							"Let Variable",
							"Const Arrow Function",
							"Let Arrow Function",
							"Function",
							"Class",
							"Multiple Variables",
							"Block",
							"Export Block Statement",
							"Unknown"
						]
					},
					"default": [
						"import",
						"enum",
						"type",
						"interface",
						"constVariable",
						"letVariable",
						"constArrowFunction",
						"letArrowFunction",
						"function",
						"class",
						"multipleVariables",
						"block",
						"export",
						"unknown"
					]
				}
			}
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "intuitaViewId",
					"title": "Intuita",
					"icon": "img/intuita.svg"
				}
			]
		},
		"views": {
			"explorer": [
				{
					"id": "explorerIntuitaViewId",
					"name": "Intuita",
					"icon": "img/intuita.svg",
					"contextualTitle": "Intuita"
				}
			],
			"intuitaViewId": [
				{
					"id": "intuitaViewId",
					"name": "Intuita",
					"icon": "img/intuita.svg",
					"contextualTitle": "Intuita"
				}
			]
		},
		"menus": {
			"view/title": [
				{
					"command": "intuita.requestFeature",
					"when": "view == intuitaViewId || view == explorerIntuitaViewId",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "intuita.acceptJob",
					"when": "viewItem == intuitaJob",
					"group": "inline"
				},
				{
					"command": "intuita.rejectJob",
					"when": "viewItem == intuitaJob",
					"group": "inline"
				}
			]
		}
	},
	"main": "./dist/extension.js",
	"scripts": {
		"vscode:prepublish": "yarn run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"lint": "eslint src --ext ts",
		"test": "mocha"
	},
	"devDependencies": {
		"@types/chai": "^4.3.1",
		"@types/glob": "^8.0.0",
		"@types/mocha": "^9.1.1",
		"@types/node": "18.7.16",
		"@types/vscode": "^1.71.0",
		"@typescript-eslint/eslint-plugin": "^5.36.2",
		"@typescript-eslint/parser": "^5.36.2",
		"@vscode/test-electron": "^2.1.5",
		"chai": "^4.3.6",
		"eslint": "^8.23.0",
		"glob": "^8.0.3",
		"mocha": "^10.0.0",
		"ts-loader": "^9.3.1",
		"ts-node": "^10.9.1",
		"umd-compat-loader": "^2.1.2",
		"webpack": "^5.72.1",
		"webpack-cli": "^4.10.0"
	},
	"dependencies": {
		"axios": "^0.27.2",
		"fp-ts": "^2.12.3",
		"io-ts": "^2.2.18",
		"io-ts-reporters": "^2.0.1",
		"typescript": "^4.8.2"
	}
}
