{
	"name": "intuita-vscode-extension",
	"displayName": "Intuita",
	"description": "Automatic Code Modification, Built For Scale",
	"version": "0.7.0",
	"publisher": "Intuita",
	"icon": "img/intuita_square128.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/intuita-inc/intuita-vscode-extension"
	},
	"engines": {
		"vscode": "^1.74.0"
	},
	"categories": [
		"Programming Languages",
		"Formatters",
		"Linters"
	],
	"keywords": [
		"prettier",
		"intellicode",
		"intellisense",
		"tabnine",
		"copilot",
		"refactor",
		"dependency"
	],
	"activationEvents": [
		"workspaceContains:**/*.ts*"
	],
	"capabilities": {
		"codeActionProvider": "true"
	},
	"contributes": {
		"viewsWelcome": [
			{
				"view": "intuitaViewId",
				"contents": "No change to review! Run a codemod recipe via VS Code Command & check back later!"
			},
			{
				"view": "explorerIntuitaViewId",
				"contents": "No change to review! Run a codemod recipe via VS Code Command & check back later!"
			}
		],
		"commands": [
			{
				"command": "intuita.executeNextJsCodemods",
				"title": "Intuita: execute Next.js codemods (over the workspace)"
			},
			{
				"command": "intuita.executePagesToAppsCodemods",
				"title": "Intuita: execute Pages-to-Apps codemods (experimental)"
			},
			{
				"command": "intuita.executeMuiCodemods",
				"title": "Intuita: execute MUI codemods (over the workspace)"
			},
			{
				"command": "intuita.executeReactRouterv4Codemods",
				"title": "Intuita: execute React Router v4 codemods (over the workspace)"
			},
			{
				"command": "intuita.clearOutputFiles",
				"title": "Intuita: clear output files"
			},
			{
				"command": "intuita.requestFeature",
				"title": "Request a feature",
				"icon": "$(flame)"
			},
			{
				"command": "intuita.openYouTubeChannel",
				"title": "Open our YouTube Channel",
				"icon": "$(device-camera-video)"
			},
			{
				"command": "intuita.clearState",
				"title": "Clear state",
				"icon": "$(clear-all)"
			},
			{
				"command": "intuita.acceptJob",
				"title": "✓ Accept"
			},
			{
				"command": "intuita.rejectJob",
				"title": "✗ Reject"
			},
			{
				"command": "intuita.acceptCase",
				"title": "✓ Accept"
			},
			{
				"command": "intuita.rejectCase",
				"title": "✗ Reject"
			},
			{
				"command": "intuita.executeAsCodemod",
				"title": "[Intuita] Execute as a Codemod"
			}
		],
		"configuration": {
			"title": "Intuita VSCode Extension Configuration",
			"properties": {
				"intuita.saveDocumentOnJobAccept": {
					"order": 0,
					"type": "boolean",
					"default": true,
					"description": "When you accept a recommendation, the extension will save the associated file."
				},
				"intuita.fileLimit": {
					"order": 1,
					"type": "number",
					"default": 100,
					"description": "The maximum number of files to execute any codemod over"
				},
				"intuita.telemetryEnabled": {
					"order": 2,
					"type": "boolean",
					"default": "true",
					"description": "Whether to send any telemetry messages to the Intuita servers."
				}
			}
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "intuitaViewId",
					"title": "Intuita",
					"icon": "img/intuita.svg"
				}
			]
		},
		"views": {
			"explorer": [
				{
					"id": "explorerIntuitaViewId",
					"name": "Intuita",
					"icon": "img/intuita.svg",
					"contextualTitle": "Intuita"
				}
			],
			"intuitaViewId": [
				{
					"id": "intuitaViewId",
					"name": "Intuita",
					"icon": "img/intuita.svg",
					"contextualTitle": "Intuita"
				}
			]
		},
		"menus": {
			"commandPalette": [
				{
					"command": "intuita.requestFeature",
					"when": "false"
				},
				{
					"command": "intuita.openYouTubeChannel",
					"when": "false"
				},
				{
					"command": "intuita.clearState",
					"when": "false"
				},
				{
					"command": "intuita.acceptJob",
					"when": "false"
				},
				{
					"command": "intuita.rejectJob",
					"when": "false"
				},
				{
					"command": "intuita.acceptCase",
					"when": "false"
				},
				{
					"command": "intuita.rejectCase",
					"when": "false"
				}
			],
			"explorer/context": [
				{
					"command": "intuita.executeAsCodemod",
					"group": "2_workspace",
					"when": "resourceExtname == .js || resourceExtname == .ts"
				}
			],
			"view/title": [
				{
					"command": "intuita.clearState",
					"when": "view == intuitaViewId || view == explorerIntuitaViewId",
					"group": "navigation"
				},
				{
					"command": "intuita.requestFeature",
					"when": "view == intuitaViewId || view == explorerIntuitaViewId",
					"group": "navigation"
				},
				{
					"command": "intuita.openYouTubeChannel",
					"when": "view == intuitaViewId || view == explorerIntuitaViewId",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "intuita.acceptJob",
					"when": "viewItem == jobElement",
					"group": "inline"
				},
				{
					"command": "intuita.rejectJob",
					"when": "viewItem == jobElement",
					"group": "inline"
				},
				{
					"command": "intuita.acceptCase",
					"when": "viewItem == caseElement",
					"group": "inline"
				},
				{
					"command": "intuita.rejectCase",
					"when": "viewItem == caseElement",
					"group": "inline"
				}
			]
		}
	},
	"main": "./dist/extension.js",
	"scripts": {
		"vscode:prepublish": "yarn run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"lint:eslint": "eslint src --fix --ext ts",
		"lint:prettier": "prettier --write .",
		"spellcheck": "yarn cspell '**.*'"
	},
	"devDependencies": {
		"@types/chai": "^4.3.4",
		"@types/glob": "^8.0.0",
		"@types/mocha": "^10.0.1",
		"@types/node": "18.11.15",
		"@types/semver": "^7.3.13",
		"@types/vscode": "^1.74.0",
		"@typescript-eslint/eslint-plugin": "^5.46.1",
		"@typescript-eslint/parser": "^5.46.1",
		"@vscode/test-electron": "^2.2.1",
		"chai": "^4.3.7",
		"cspell-cli": "^6.16.0",
		"eslint": "^8.29.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-prettier": "^4.2.1",
		"glob": "^8.0.3",
		"mocha": "^10.2.0",
		"prettier": "2.8.1",
		"ts-loader": "^9.4.2",
		"ts-node": "^10.9.1",
		"typescript": "^4.9.4",
		"umd-compat-loader": "^2.1.2",
		"webpack": "^5.75.0",
		"webpack-cli": "^5.0.1"
	},
	"dependencies": {
		"axios": "^1.2.1",
		"fp-ts": "^2.13.1",
		"io-ts": "^2.2.20",
		"io-ts-reporters": "^2.0.1",
		"io-ts-types": "^0.5.19",
		"monocle-ts": "^2.3.13",
		"newtype-ts": "^0.3.5",
		"semver": "^7.3.8"
	}
}
