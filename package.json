{
	"name": "intuita-vscode-extension",
	"displayName": "Intuita",
	"description": "Automated Code Organization & Modularization",
	"version": "0.0.1",
	"icon": "img/intuitasq128.png",
	"engines": {
		"vscode": "^1.69.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"workspaceContains:**/*.ts*"
	],
	"capabilities": {
		"codeActionProvider": "true"
	},
	"contributes": {
		"viewsWelcome": [
			{
				"view": "intuitaViewId",
				"contents": "[TODO] There are no recommendations."
			},
			{
				"view": "explorerIntuitaViewId",
				"contents": "[TODO] There are no recommendations."
			}
		],
		"commands": [
			{
				"command": "intuita.requestFeature",
				"title": "Request a feature",
				"icon": "$(flame)"
			},
			{
				"command": "intuita.acceptRecommendation",
				"title": "✓ Accept"
			},
			{
				"command": "intuita.rejectRecommendation",
				"title": "✗ Reject"
			}
		],
		"configuration": {
			"title": "Intuita VSCode Extension Configuration",
			"properties": {
				"intuita.jobBlockTrigger": {
					"type": "string",
					"default": "new",
					"enum": [
						"new",
						"newAndChanged",
						"all"
					],
					"enumDescriptions": [
						"Provide jobs only for the new code blocks",
						"Provide jobs only for the new and changed code blocks",
						"Provide jobs for all code blocks"
					]
				}
			}
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "intuitaViewId",
					"title": "Intuita",
					"icon": "img/intuita.svg"
				}
			]
		},
		"views": {
			"explorer": [
				{
					"id": "explorerIntuitaViewId",
					"name": "Intuita",
					"icon": "img/intuita.svg",
					"contextualTitle": "Intuita"
				}
			],
			"intuitaViewId": [
				{
					"id": "intuitaViewId",
					"name": "Intuita",
					"icon": "img/intuita.svg",
					"contextualTitle": "Intuita"
				}
			]
		},
		"menus": {
			"view/title": [
				{
					"command": "intuita.requestFeature",
					"when": "view == intuitaViewId || view == explorerIntuitaViewId",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "intuita.acceptRecommendation",
					"when": "viewItem == intuitaJob",
					"group": "inline"
				},
				{
					"command": "intuita.rejectRecommendation",
					"when": "viewItem == intuitaJob",
					"group": "inline"
				}
			]
		}
	},
	"main": "./dist/extension.js",
	"scripts": {
		"vscode:prepublish": "yarn run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"lint": "eslint src --ext ts",
		"test": "mocha"
	},
	"devDependencies": {
		"@types/chai": "^4.3.1",
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.1",
		"@types/node": "18.7.8",
		"@types/vscode": "^1.69.0",
		"@typescript-eslint/eslint-plugin": "^5.30.7",
		"@typescript-eslint/parser": "^5.30.7",
		"@vscode/test-electron": "^2.1.5",
		"antlr4ts-cli": "^0.5.0-alpha.4",
		"chai": "^4.3.6",
		"eslint": "^8.20.0",
		"glob": "^8.0.3",
		"mocha": "^10.0.0",
		"ts-loader": "^9.3.1",
		"ts-node": "^10.9.1",
		"umd-compat-loader": "^2.1.2",
		"webpack": "^5.72.1",
		"webpack-cli": "^4.10.0"
	},
	"dependencies": {
		"antlr4ts": "^0.5.0-alpha.4",
		"jaro-winkler": "^0.2.8",
		"typescript": "^4.7.4"
	}
}
