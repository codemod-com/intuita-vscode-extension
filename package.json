{
	"name": "intuita-vscode-extension",
	"displayName": "Intuita",
	"description": " Discover, run & manage codemods faster & easier.",
	"version": "0.32.0",
	"publisher": "Intuita",
	"icon": "img/intuita_square128.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/intuita-inc/intuita-vscode-extension"
	},
	"engines": {
		"vscode": "^1.74.0"
	},
	"categories": [
		"Programming Languages",
		"Formatters",
		"Linters"
	],
	"keywords": [
		"codemod",
		"upgrade",
		"javascript",
		"typescript",
		"next",
		"next.js",
		"prettier",
		"refactor",
		"dependency"
	],
	"activationEvents": [
		"onUri",
		"workspaceContains:**/*.ts*",
		"workspaceContains:**/*.js*"
	],
	"capabilities": {
		"codeActionProvider": "true"
	},
	"contributes": {
		"commands": [
			{
				"command": "intuita.clearOutputFiles",
				"title": "Intuita: clear output files"
			},
			{
				"command": "intuita.clearState",
				"title": "Clear All",
				"icon": "$(clear-all)"
			},
			{
				"command": "intuita.rejectCase",
				"title": "âœ— Dismiss"
			},
			{
				"command": "intuita.executeAsCodemod",
				"title": "Intuita: Run as a codemod"
			},
			{
				"command": "intuita.executeAsPiranhaRule",
				"title": "Intuita: Run as a Piranha Rule"
			},
			{
				"command": "intuita.executeCodemod",
				"title": "Intuita: Execute Codemod"
			},
			{
				"command": "intuita.executeCodemodWithinPath",
				"title": "Intuita: Execute Codemod On Path"
			},
			{
				"command": "intuita.executeImportedModOnPath",
				"title": "Intuita: Execute Imported Mod On Path"
			},
			{
				"command": "intuita.sendAsBeforeSnippet",
				"title": "Intuita: Send as Before Snippet to the Codemod Studio"
			},
			{
				"command": "intuita.sendAsAfterSnippet",
				"title": "Intuita: Send as After Snippet to the Codemod Studio"
			}
		],
		"configuration": {
			"title": "Intuita VSCode Extension Configuration",
			"properties": {
				"intuita.fileLimit": {
					"order": 1,
					"type": "number",
					"default": 2000,
					"description": "The maximum number of files to execute any codemod over"
				},
				"intuita.workerThreadCount": {
					"order": 3,
					"type": "number",
					"default": 4,
					"description": "The number of worker threads to execute any codemod over"
				},
				"intuita.includePatterns": {
					"order": 5,
					"type": "array",
					"default": [
						"**/*.{js,ts,jsx,tsx,cjs,mjs}"
					],
					"description": "The glob pattern to use when searching for files to execute codemods over"
				},
				"intuita.excludePatterns": {
					"order": 6,
					"type": "array",
					"default": [
						"**/node_modules"
					],
					"description": "The glob pattern to use when searching for files to exclude from codemod execution"
				},
				"intuita.formatWithPrettier": {
					"order": 8,
					"type": "boolean",
					"description": "Use the Prettier formatter with the configuration derived from the location of a file to be formatter."
				},
				"intuita.useCustomPrettierConfig": {
					"order": 9,
					"type": "boolean",
					"description": "Use the custom Intuita's config if Prettier config is not detected."
				}
			}
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "intuitaViewId",
					"title": "Intuita",
					"icon": "img/intuita.svg"
				}
			],
			"panel": [
				{
					"id": "intuitaPanelViewContainerId",
					"title": "Intuita",
					"icon": "img/intuita.svg"
				}
			]
		},
		"views": {
			"intuitaViewId": [
				{
					"type": "webview",
					"id": "intuitaMainView",
					"name": "",
					"contextualTitle": "Main View"
				}
			],
			"intuitaPanelViewContainerId": [
				{
					"type": "webview",
					"id": "intuitaErrorViewId",
					"name": "Errors",
					"contextualTitle": "Errors"
				}
			]
		},
		"menus": {
			"commandPalette": [
				{
					"command": "intuita.clearState",
					"when": "false"
				},
				{
					"command": "intuita.rejectCase",
					"when": "false"
				},
				{
					"command": "intuita.executeAsCodemod",
					"when": "false"
				},
				{
					"command": "intuita.executeAsPiranhaRule",
					"when": "false"
				},
				{
					"command": "intuita.executeCodemod",
					"when": "false"
				},
				{
					"command": "intuita.executeCodemodWithinPath",
					"when": "editorIsOpen"
				},
				{
					"command": "intuita.executeImportedModOnPath",
					"when": "false"
				}
			],
			"editor/context": [
				{
					"command": "intuita.sendAsBeforeSnippet",
					"when": "editorHasSelection",
					"group": "9_cutcopypaste"
				},
				{
					"command": "intuita.sendAsAfterSnippet",
					"when": "editorHasSelection",
					"group": "9_cutcopypaste"
				}
			],
			"explorer/context": [
				{
					"command": "intuita.executeAsCodemod",
					"group": "2_workspace",
					"when": "resourceExtname == .js || resourceExtname == .ts"
				},
				{
					"command": "intuita.executeAsPiranhaRule",
					"group": "2_workspace",
					"when": "explorerResourceIsFolder"
				},
				{
					"command": "intuita.executeCodemodWithinPath",
					"group": "2_workspace",
					"when": "true"
				},
				{
					"command": "intuita.executeImportedModOnPath",
					"group": "2_workspace",
					"when": "explorerResourceIsFolder"
				}
			]
		}
	},
	"main": "./dist/extension.js",
	"scripts": {
		"vscode:prepublish": "pnpm run build",
		"compile": "webpack",
		"watch": "webpack --watch",
		"build": "pnpm install:webview && pnpm build:webview && pnpm install && NODE_ENV='production' webpack --mode production --devtool hidden-source-map",
		"lint:eslint": "eslint src --fix --ext ts",
		"lint:prettier": "prettier --write .",
		"spellcheck": "pnpm cspell-cli '**/*.{ts,tsx}'",
		"install:webview": "cd intuita-webview && pnpm install",
		"build:webview": "cd intuita-webview && pnpm build",
		"watch:webview": "cd intuita-webview && pnpm start",
		"package": "vsce package --no-dependencies"
	},
	"devDependencies": {
		"@types/chai": "^4.3.4",
		"@types/glob": "^8.0.0",
		"@types/mocha": "^10.0.1",
		"@types/node": "18.11.18",
		"@types/prettier": "^2.7.3",
		"@types/semver": "^7.3.13",
		"@types/vscode": "^1.74.0",
		"@typescript-eslint/eslint-plugin": "^5.48.1",
		"@typescript-eslint/parser": "^5.48.1",
		"@vscode/test-electron": "^2.2.2",
		"chai": "^4.3.7",
		"cspell-cli": "^6.17.1",
		"esbuild": "^0.17.18",
		"eslint": "^8.31.0",
		"eslint-config-prettier": "^8.6.0",
		"eslint-plugin-prettier": "^4.2.1",
		"glob": "^8.0.3",
		"mocha": "^10.2.0",
		"ts-loader": "^9.4.2",
		"ts-node": "^10.9.1",
		"typescript": "^4.9.4",
		"umd-compat-loader": "^2.1.2",
		"webpack": "^5.75.0",
		"webpack-cli": "^5.0.1"
	},
	"dependencies": {
		"@reduxjs/toolkit": "^1.9.5",
		"@vscode/extension-telemetry": "^0.7.7",
		"axios": "^1.2.2",
		"fast-deep-equal": "^3.1.3",
		"fp-ts": "^2.15.0",
		"fuzzysort": "^2.0.4",
		"io-ts": "^2.2.20",
		"io-ts-reporters": "^2.0.1",
		"io-ts-types": "^0.5.19",
		"monocle-ts": "^2.3.13",
		"newtype-ts": "^0.3.5",
		"prettier": "^2.8.8",
		"redux-persist": "^6.0.0",
		"semver": "^7.3.8"
	},
	"extensionDependencies": [
		"vscode.git"
	]
}
