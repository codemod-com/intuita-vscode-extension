{
	"name": "intuita-vscode-extension",
	"displayName": "Intuita",
	"description": "Your Pair Programmer for Maintenance",
	"version": "0.5.1",
	"publisher": "Intuita",
	"icon": "img/intuita_square128.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/intuita-inc/intuita-vscode-extension"
	},
	"engines": {
		"vscode": "^1.73.0"
	},
	"categories": [
		"Programming Languages",
		"Formatters",
		"Linters"
	],
	"keywords": [
		"prettier",
		"intellicode",
		"intellisense",
		"tabnine",
		"copilot",
		"refactor",
		"dependency"
	],
	"activationEvents": [
		"workspaceContains:**/*.ts*"
	],
	"capabilities": {
		"codeActionProvider": "true"
	},
	"contributes": {
		"viewsWelcome": [
			{
				"view": "intuitaViewId",
				"contents": "No recommendations yet! Build some code & check back later!"
			},
			{
				"view": "explorerIntuitaViewId",
				"contents": "No recommendations yet! Build some code & check back later!"
			}
		],
		"commands": [
			{
				"command": "intuita.buildNextJsCodeRepairJobs",
				"title": "Intuita: Build Next.js code-repair recommendations (experimental)"
			},
			{
				"command": "intuita.buildPagesToAppsCodeRepairJobs",
				"title": "Intuita: Build Pages-to-Apps code-repair recommendations (experimental)"
			},
			{
				"command": "intuita.buildMuiCodeRepairJobs",
				"title": "Intuita: Build MUI code-repair recommendations (experimental)"
			},
			{
				"command": "intuita.clearOutputFiles",
				"title": "Intuita: Clear output files"
			},
			{
				"command": "intuita.showOrHideFileElements",
				"title": "Show or hide file elements",
				"icon": "$(list-tree)"
			},
			{
				"command": "intuita.requestFeature",
				"title": "Request a feature",
				"icon": "$(flame)"
			},
			{
				"command": "intuita.acceptJob",
				"title": "✓ Accept"
			},
			{
				"command": "intuita.rejectJob",
				"title": "✗ Reject"
			},
			{
				"command": "intuita.acceptCase",
				"title": "✓ Accept"
			},
			{
				"command": "intuita.rejectCase",
				"title": "✗ Reject"
			}
		],
		"configuration": {
			"title": "Intuita VSCode Extension Configuration",
			"properties": {
				"intuita.saveDocumentOnJobAccept": {
					"order": 0,
					"type": "boolean",
					"default": true,
					"description": "When you accept a recommendation, the extension will save the associated file."
				},
				"intuita.showFileElements": {
					"order": 5,
					"type": "boolean",
					"default": false,
					"description": "Show the file elements (or just job elements) within the case elements in the tree view"
				}
			}
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "intuitaViewId",
					"title": "Intuita",
					"icon": "img/intuita.svg"
				}
			]
		},
		"views": {
			"explorer": [
				{
					"id": "explorerIntuitaViewId",
					"name": "Intuita",
					"icon": "img/intuita.svg",
					"contextualTitle": "Intuita"
				}
			],
			"intuitaViewId": [
				{
					"id": "intuitaViewId",
					"name": "Intuita",
					"icon": "img/intuita.svg",
					"contextualTitle": "Intuita"
				}
			]
		},
		"menus": {
			"view/title": [
				{
					"command": "intuita.showOrHideFileElements",
					"when": "view == intuitaViewId || view == explorerIntuitaViewId",
					"group": "navigation"
				},
				{
					"command": "intuita.requestFeature",
					"when": "view == intuitaViewId || view == explorerIntuitaViewId",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "intuita.acceptJob",
					"when": "viewItem == jobElement",
					"group": "inline"
				},
				{
					"command": "intuita.rejectJob",
					"when": "viewItem == jobElement",
					"group": "inline"
				},
				{
					"command": "intuita.acceptCase",
					"when": "viewItem == caseElement",
					"group": "inline"
				},
				{
					"command": "intuita.rejectCase",
					"when": "viewItem == caseElement",
					"group": "inline"
				}
			]
		}
	},
	"main": "./dist/extension.js",
	"scripts": {
		"vscode:prepublish": "yarn run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"lint:eslint": "eslint src test --fix --ext ts",
		"lint:prettier": "prettier --write .",
		"spellcheck": "yarn cspell '**.*'",
		"test": "mocha"
	},
	"devDependencies": {
		"@types/chai": "^4.3.4",
		"@types/glob": "^8.0.0",
		"@types/mocha": "^10.0.0",
		"@types/node": "18.11.9",
		"@types/vscode": "^1.73.1",
		"@typescript-eslint/eslint-plugin": "^5.43.0",
		"@typescript-eslint/parser": "^5.43.0",
		"@vscode/test-electron": "^2.2.0",
		"chai": "^4.3.7",
		"cspell-cli": "^6.14.1",
		"eslint": "^8.27.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-prettier": "^4.2.1",
		"glob": "^8.0.3",
		"mocha": "^10.1.0",
		"prettier": "2.7.1",
		"ts-loader": "^9.4.1",
		"ts-node": "^10.9.1",
		"umd-compat-loader": "^2.1.2",
		"webpack": "^5.75.0",
		"webpack-cli": "^4.10.0",
		"typescript": "^4.8.4"
	},
	"dependencies": {
		"axios": "^1.1.3",
		"form-data": "^4.0.0",
		"fp-ts": "^2.13.1",
		"io-ts": "^2.2.19",
		"io-ts-reporters": "^2.0.1",
		"io-ts-types": "^0.5.19",
		"monocle-ts": "^2.3.13",
		"newtype-ts": "^0.3.5"
	}
}
