{
	"name": "intuita-vscode-extension",
	"displayName": "Intuita",
	"description": "Bring Order To Your Code",
	"version": "0.1.0",
	"publisher": "Intuita",
	"icon": "img/intuitasq128.png",
	"engines": {
		"vscode": "^1.69.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"workspaceContains:**/*.ts*"
	],
	"capabilities": {
		"codeActionProvider": "true"
	},
	"contributes": {
		"viewsWelcome": [
			{
				"view": "intuitaViewId",
				"contents": "No recommendations yet! Build some code & check back later!"
			},
			{
				"view": "explorerIntuitaViewId",
				"contents": "No recommendations yet! Build some code & check back later!"
			}
		],
		"commands": [
			{
				"command": "intuita.requestFeature",
				"title": "Request a feature",
				"icon": "$(flame)"
			},
			{
				"command": "intuita.acceptJob",
				"title": "✓ Accept"
			},
			{
				"command": "intuita.rejectJob",
				"title": "✗ Reject"
			}
		],
		"configuration": {
			"title": "Intuita VSCode Extension Configuration",
			"properties": {
				"intuita.saveDocumentOnJobAccept": {
					"type": "boolean",
					"default": true,
					"description": "When you accept a job, the extension will save the associated document"
				},
				"intuita.jobBlockTrigger": {
					"type": "string",
					"default": "newAndChanged",
					"enum": [
						"new",
						"newAndChanged",
						"all"
					],
					"enumDescriptions": [
						"Rearrange only newly created code blocks.",
						"Rearrange newly created or changed code blocks.",
						"Rearrange all code blocks in the modified files."
					]
				},
				"intuita.topLevelNodeKindOrder": {
					"type": "array",
					"items": {
						"type": "string",
						"enum": [
							"enum",
							"typeAlias",
							"interface",
							"function",
							"class",
							"block",
							"variable",
							"unknown"
						],
						"enumDescriptions": [
							"Enumeration",
							"Type Alias",
							"Interface",
							"Function",
							"Class",
							"Unnamed Block",
							"Variable",
							"Other/Unknown Statement"
						]
					},
					"default": [
						"enum",
						"typeAlias",
						"interface",
						"function",
						"class",
						"block",
						"variable",
						"unknown"
					]
				}
			}
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "intuitaViewId",
					"title": "Intuita",
					"icon": "img/intuita.svg"
				}
			]
		},
		"views": {
			"explorer": [
				{
					"id": "explorerIntuitaViewId",
					"name": "Intuita",
					"icon": "img/intuita.svg",
					"contextualTitle": "Intuita"
				}
			],
			"intuitaViewId": [
				{
					"id": "intuitaViewId",
					"name": "Intuita",
					"icon": "img/intuita.svg",
					"contextualTitle": "Intuita"
				}
			]
		},
		"menus": {
			"view/title": [
				{
					"command": "intuita.requestFeature",
					"when": "view == intuitaViewId || view == explorerIntuitaViewId",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "intuita.acceptJob",
					"when": "viewItem == intuitaJob",
					"group": "inline"
				},
				{
					"command": "intuita.rejectJob",
					"when": "viewItem == intuitaJob",
					"group": "inline"
				}
			]
		}
	},
	"main": "./dist/extension.js",
	"scripts": {
		"vscode:prepublish": "yarn run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"lint": "eslint src --ext ts",
		"test": "mocha"
	},
	"devDependencies": {
		"@types/chai": "^4.3.1",
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.1",
		"@types/node": "18.7.9",
		"@types/vscode": "^1.69.0",
		"@typescript-eslint/eslint-plugin": "^5.34.0",
		"@typescript-eslint/parser": "^5.34.0",
		"@vscode/test-electron": "^2.1.5",
		"chai": "^4.3.6",
		"eslint": "^8.20.0",
		"glob": "^8.0.3",
		"mocha": "^10.0.0",
		"ts-loader": "^9.3.1",
		"ts-node": "^10.9.1",
		"umd-compat-loader": "^2.1.2",
		"webpack": "^5.72.1",
		"webpack-cli": "^4.10.0"
	},
	"dependencies": {
		"typescript": "^4.7.4"
	}
}
